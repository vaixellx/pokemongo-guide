<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->

    <meta property="og:title" content="<%= current_page.data.title || 'All Guides' %> | Pokemon GO Guide by VAiXEllX">
    <meta property="og:type" content="event">
    <meta property="og:image" content="<%= yield_content(:og_poster) || image_path(current_page.data.og_poster || "og.jpg") %>">
    <meta property="og:description" content="Basic Guide for Pokemon Go Trainer!">
    <meta name="keywords" content="pokemon, pokemongo, guide, rocket, type, battle, pokemon go, rocket grunt, rocket boss, line up" />

    <title><%= current_page.data.title || yield_content(:title) %> | Pokego Guide</title>

    <%= stylesheet_link_tag "site" %>
  </head>
  <body class="<%= page_classes %>" >
    <nav class="navbar fixed-top navbar-expand-lg navbar-light mb-5" style="background-color: #f5f5f5ee">
      <div class="container">
        <a class="navbar-brand" href="/">
          <%= image_tag 'go-ball-logo.png', height: 35 %>
          <b class="ml-2 text-primary">PokéGo</b>
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" target="_blank" href="https://www.pokemon.com/us/pokedex/">
                <i class="fas fa-search mr-2"></i>
                ค้นหาโปเกมอน
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="mb-5 pb-5"></div>

    <%= yield %>

    <%= javascript_include_tag "site" %>
  </body>
</html>
