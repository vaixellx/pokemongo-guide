<% pokemon_name, pokemon = data.pokemon.to_a[id] %>
<% content_for(:title) { pokemon_name } %>

<div class="container">
  <h3 class="mb-4">
    <%= pokemon_name %>
    <span class="text-muted">
      #<%= pokemon.id.to_s.rjust(3, '0') %>
    </span>
  </h3>

  <div class="row">
    <div class="text-center col-12 col-md-6 col-lg-5 col-xl-4">
      <div class="card bg-dark border-0 mb-3">
        <div class="card-body">
          <%= image_tag pokemon_go_image_by_number(pokemon.id.to_s.rjust(3, '0')),
                width: 256 %>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-6 col-lg-7 col-xl-8">
      <div class="text-muted mb-4">
        ประเภท :

        <div class="mt-2">
          <% pokemon.types.each do |type| %>
            <%= image_tag "types/#{type}.png",
                  class: "rounded-circle mr-1",
                  width: 36 %>
          <% end %>
        </div>
      </div>

      <div class="text-danger mb-4">
        <i class="mr-2 fas fa-frown"></i>
        ประเภทที่แพ้ทาง :

        <div class="mt-2">
          <% pokemon.types.each do |type| %>
            <%= image_tag "types/#{type}.png",
                  class: "rounded-circle mr-1",
                  width: 36 %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
